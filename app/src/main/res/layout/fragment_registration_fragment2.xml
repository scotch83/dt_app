<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_registratie2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/ll_registratie2_bottom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="#b4000000"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_registratie2_opleiding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingLeft="150dp"
                    android:paddingRight="50dp"
                    android:paddingTop="50dp">

                    <TextView
                        android:id="@+id/tv_stad_secundaireschool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="Stad huidige school"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#e6ffffff"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/et_stad_secundaireschool"
                        style="@style/EditTextCustomHolo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:inputType="textPersonName" />

                    <Spinner
                        android:id="@+id/sp_secundaire_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_registratie2_interesse"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingLeft="50dp"
                    android:paddingRight="150dp"
                    android:paddingTop="50dp">


                    <TextView
                        android:id="@+id/tv_interesse_opleiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="In welke opleiding bent u geÃ¯nteresseerd?"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#e6ffffff"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cb_multex"
                        style="@style/CheckBoxCustomHolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multec"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/cb_digx"
                        style="@style/CheckBoxCustomHolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Dig-X"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_werkstudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="30dp"
                        android:text="Werkstudent?"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#e6ffffff"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <RadioButton
                            android:id="@+id/rb_ja"
                            style="@style/RadioButtonCustumHolo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:checked="false"
                            android:text="Ja"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/rb_nee"
                            style="@style/RadioButtonCustumHolo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Nee"
                            android:textSize="20sp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_registratie2_top"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ehbletter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ehbletter" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
