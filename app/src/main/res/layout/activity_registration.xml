<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_registratie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context="be.ehb.dt_app.activities.RegistrationActivity">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_registratie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_page1"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:baselineAlignBottom="true"
            android:scaleType="centerInside"
            android:src="@drawable/dotsselected" />

        <ImageView
            android:id="@+id/iv_page2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:baselineAlignBottom="true"
            android:src="@drawable/dotsunselected" />
    </LinearLayout>


</RelativeLayout>