<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:id="@+id/RelativeLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:weightSum="1"
        android:alpha="0.5"
        android:id="@+id/LinearLayout_loginscreen"

        android:layout_marginTop="270dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/color_wit">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout_logo"
            android:layout_marginRight="50dp"
            android:paddingTop="20dp"
            android:paddingLeft="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_logo"
                android:src="@drawable/logo_wit"
                android:scaleType="centerCrop"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/LinearLayout_login"
            android:paddingLeft="50dp"
            android:paddingTop="55dp">

            <Spinner
                style="@style/SpinnerCustomHolo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_docent"
                android:spinnerMode="dropdown"
                />

            <Spinner
                style="@style/SpinnerCustomHolo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:id="@+id/sp_event"
                android:layout_marginTop="50dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
