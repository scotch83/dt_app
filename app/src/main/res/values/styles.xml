<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">250dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>

    <style name="App_EditTextStyle">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:height">150dp</item>


    </style>

    <style name="SpinnerCustomHolo" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/sidintheme_spinner_background_holo_light</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:background">@drawable/sidintheme_edit_text_holo_light</item>
        <item name="android:textColor">#ffbababa</item>
        <item name="android:textSize">25sp</item>

    </style>
    <style name="CheckBoxCustomHolo" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sidintheme_btn_check_holo_light</item>
        <item name="android:textColor">#ffbababa</item>


    </style>

    <style name="RadioButtonCustumHolo" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/sidintheme_btn_radio_holo_light</item>
        <item name="android:textColor">#ffbababa</item>
    </style>

</resources>
