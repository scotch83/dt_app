    <style name="App_EditTextStyle">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:height">150dp</item>


    </style>

    <style name="SpinnerCustomHolo" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/sidintheme_spinner_background_holo_light</item>
        <item name="android:textColor">#FF471413</item>

    </style>

    <style name="EditTextCustomHolo" parent="android:Widget.EditText">
        <item name="android:background">@drawable/sidintheme_edit_text_holo_light</item>
        <item name="android:textColor">#ffbababa</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="CheckBoxCustomHolo" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sidintheme_btn_check_holo_light</item>
        <item name="android:textColor">#ffbababa</item>


    </style>

    <style name="RadioButtonCustumHolo" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/sidintheme_btn_radio_holo_light</item>
        <item name="android:textColor">#ffbababa</item>
    </style>

    <style name="screensaver_dialog" parent="@android:style/Theme.Dialog">>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ColoredSpinnerCustom" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/sidintheme_spinner_background_holo_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

